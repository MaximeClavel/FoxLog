{
  "manifest_version": 3,
  "name": "FoxLog",
  "version": "1.0.5",
  "description": "Display Salesforce debug logs in a user-friendly format.",
  
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "webRequest"
  ],
  
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.lightning.force.com/*"
  ],
  
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.visualforce.com/*",
        "https://*.lightning.force.com/*"
      ],
      "js": [
        "src/core/constants.js",
        "src/core/logger.js",
        "src/core/cache-manager.js",
        "src/services/session-manager.js",
        "src/services/salesforce-api.js",
        "src/parsers/log-parser.js",
        "src/ui/filter-manager.js",
        "src/ui/modal-manager.js",
        "src/ui/panel-manager.js",
        "src/content.js"
      ],
      "css": ["src/styles.css", "src/modal-styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/*.png",
        "src/injected.js"
      ],
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.visualforce.com/*",
        "https://*.lightning.force.com/*"
      ]
    }
  ]
}