{
  "manifest_version": 3,
  "name": "FoxLog - Salesforce Debug Log Viewer",
  "version": "1.1.1",
  "description": "Display Salesforce debug logs in a user-friendly format with error detection and debug control.",
  
  "permissions": [
    "cookies",
    "storage"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    },
    "default_title": "FoxLog Settings"
  },
  
  "host_permissions": [
    "https://*.my.salesforce.com/*",
    "https://*.lightning.force.com/*"
  ],
  
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.lightning.force.com/*"
      ],
      "js": [
        "src/core/constants.js",
        "src/core/logger.js",
        "src/core/cache-manager.js",
        "src/services/session-manager.js",
        "src/services/salesforce-api.js",
        "src/services/debug-level-manager.js",
        "src/services/log-preview-service.js",
        "src/services/call-tree-builder.js",
        "src/parsers/log-parser.js",
        "src/ui/filter-manager.js",
        "src/ui/call-tree-view.js",
        "src/ui/modal-manager.js",
        "src/ui/panel-manager.js",
        "src/content.js"
      ],
      "css": ["src/styles.css", "src/modal-styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/*.png",
        "src/workers/call-tree-worker.js",
        "src/injected.js"
      ],
      "matches": [
        "https://*.lightning.force.com/*"
      ]
    }
  ]
}